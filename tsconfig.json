{
  "include": [
    "src/index.ts",
    "src/typings.d.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [ "es2017", "esnext.asynciterable" ],
    "typeRoots": [ "node_modules/@types" ],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "rootDir": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}